{
  "manifest_version": 3,
  "name": "CSGORoll Price Extension",
  "version": "1.0.0",
  "description": "Compare BUFF163 item prices on CSGORoll with PriceEmpire market data for better trading decisions",
  "author": "teig",
  "homepage_url": "https://github.com/yourusername/csgoroll-price-checker",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://csgoroll.com/*",
    "*://api.pricempire.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://csgoroll.com/*", "*://*.csgoroll.com/*"],
      "js": ["scripts/content.js"],
      "css": ["ui/styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "CSGORoll Price Extension",
    "default_icon": {
      "16": "images/coin.png",
      "32": "images/coin.png",
      "48": "images/coin.png",
      "128": "images/coin.png"
    }
  },
  "icons": {
    "16": "images/coin.png",
    "32": "images/coin.png",
    "48": "images/coin.png",
    "128": "images/coin.png"
  }
}